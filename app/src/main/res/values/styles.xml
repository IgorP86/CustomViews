<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextAppearance</item>
        <item name="buttonStyle">@style/MyTextAppearance</item>
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <item name="radioButtonStyle">@style/MyRadioButtonTwo</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarSize">25dp</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyRadioButtonTwo" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal" tools:ignore="NewApi">#64dd17</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">#460745</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">#c51162</item>
        <item name="android:textColorPrimaryDisableOnly">#00838f</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <!--<item name="android:textColor">@color/colorYellow</item>-->
        <item name="android:textSize">25sp</item>
         <item name="android:textAppearance">@style/MyTextAppearance</item>

     </style>
 </resources>
