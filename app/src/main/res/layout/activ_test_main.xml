<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed">

    <custom.MyCustomViewGroup
        style="@style/CardView.Dark"
        android:id="@+id/myCustomViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/myCustomViewGroup2"
        app:layout_constraintDimensionRatio="1.9:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <custom.MyCustomViewGroup
        style="@style/CardView.Dark"
        android:id="@+id/myCustomViewGroup2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.9:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myCustomViewGroup" />


</android.support.constraint.ConstraintLayout>